<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Page Image Component"
    activeTab="{Long}0"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <allowedImageDimensionsTab
                jcr:primaryType="cq:Panel"
                title="Allowed Image Dimensions">
                <items jcr:primaryType="cq:WidgetCollection">
                    <allowedDimensions
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Allowed Dimensions"
                        fieldSubLabel="width x height (ex. 10x20)"
                        fieldDescription=""
                        name="./allowedDimensions"
                        xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="nt:unstructured"
                                xtype="textfield"/>
                    </allowedDimensions>
                </items>
            </allowedImageDimensionsTab>
        </items>
    </items>
</jcr:root>
